/* Gemini 3 Pro - Perfect Match for Badjeff Driver */
/* 하드웨어(판매자 정보): SCK=8, MOSI=17, CS=20, IRQ=6 */
/* 통신방식(판매자 정보): 3-wire Duplex */
/* 소프트웨어(형님 환경): Badjeff Driver + Input Listener */

#include <dt-bindings/input/input-event-codes.h>

&pinctrl {
    spi0_default: spi0_default {
        group1 {
            /* 3-wire SPI 핵심: MOSI와 MISO를 17번 핀 하나로 묶음 */
            psels = <NRF_PSEL(SPIM_SCK, 0, 8)>,
                <NRF_PSEL(SPIM_MOSI, 0, 17)>,
                <NRF_PSEL(SPIM_MISO, 0, 17)>;
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 8)>,
                <NRF_PSEL(SPIM_MOSI, 0, 17)>,
                <NRF_PSEL(SPIM_MISO, 0, 17)>;
            low-power-enable;
        };
    };
};

&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    
    /* CS 핀 */
    cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        
        /* [핵심 1] 3-wire 모드 활성화 (이게 없어서 안 움직였음) */
        duplex = <2048>;

        /* [핵심 2] 핀 번호 6번 */
        /* badjeff 최신 버전은 irq-gpios를 주로 씁니다. 에러나면 motion-gpios로 변경 */
        irq-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        
        /* 스크롤 설정 (잠시 주석 처리, 커서 이동 확인 후 활성화 추천) */
        /* scroll-layers = <1>; */
    };
};

/* [핵심 3] Badjeff 엔진의 필수품: Input Listener */
/ {
    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;
        
        /* 마우스 움직임 활성화 */
        xy-swap; /* 필요시 주석 해제 (X/Y 축 변경) */
        y-invert; /* 필요시 주석 해제 (Y축 반전) */
        x-invert; /* 필요시 주석 해제 (X축 반전) */
    };
};
