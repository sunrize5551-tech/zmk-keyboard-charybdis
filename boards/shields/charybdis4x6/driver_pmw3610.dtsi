/* Gemini 3 Pro - Badjeff Standard Compliant */
/* 하드웨어: SCK(8), MOSI(17), CS(20), IRQ(6) */
/* 통신: 3-wire Duplex */
/* 수정: 리스너에서 에러나는 xy-swap 등 제거 (일단 순정으로 연결) */

#include <dt-bindings/input/input-event-codes.h>

&pinctrl {
    spi0_default: spi0_default {
        group1 {
            /* 3-wire SPI: MOSI/MISO -> 17번 */
            psels = <NRF_PSEL(SPIM_SCK, 0, 8)>,
                <NRF_PSEL(SPIM_MOSI, 0, 17)>,
                <NRF_PSEL(SPIM_MISO, 0, 17)>;
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 8)>,
                <NRF_PSEL(SPIM_MOSI, 0, 17)>,
                <NRF_PSEL(SPIM_MISO, 0, 17)>;
            low-power-enable;
        };
    };
};

&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    
    /* CS 핀 */
    cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        
        /* 3-wire 모드 */
        duplex = <2048>;

        /* 핀 이름: motion-gpios (최신 badjeff 호환) */
        motion-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        
        /* 축 설정 (필수) */
        zephyr,axis-x = <INPUT_REL_X>;
        zephyr,axis-y = <INPUT_REL_Y>;

        /* 스크롤 설정 (잠시 주석) */
        /* scroll-layers = <1>; */
    };
};

/* [수정됨] Badjeff 리스너 (에러 유발 옵션 제거) */
/ {
    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;
        
        /* 일단 아무 옵션 없이 "연결"만 합니다. */
        /* xy-swap 같은 건 여기서 에러 나니까 뺐습니다. */
        /* 트랙볼이 움직이면 나중에 방향만 다시 잡으면 됩니다. */
    };
};
