/* Gemini 3 Pro - Final Fix based on Build Log */
/* 하드웨어: SCK(8), MOSI(17), CS(20), IRQ(6) */
/* 통신: 3-wire Duplex */
/* 수정: motion-gpios 유지 + zephyr,axis-x 추가 (에러 해결) */

#include <dt-bindings/input/input-event-codes.h>

&pinctrl {
    spi0_default: spi0_default {
        group1 {
            /* 3-wire SPI: MOSI와 MISO를 17번으로 통일 */
            psels = <NRF_PSEL(SPIM_SCK, 0, 8)>,
                <NRF_PSEL(SPIM_MOSI, 0, 17)>,
                <NRF_PSEL(SPIM_MISO, 0, 17)>;
        };
    };

    spi0_sleep: spi0_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 8)>,
                <NRF_PSEL(SPIM_MOSI, 0, 17)>,
                <NRF_PSEL(SPIM_MISO, 0, 17)>;
            low-power-enable;
        };
    };
};

&spi0 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi0_default>;
    pinctrl-1 = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    
    /* CS 핀 */
    cs-gpios = <&gpio0 20 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status = "okay";
        compatible = "pixart,pmw3610";
        reg = <0>;
        spi-max-frequency = <2000000>;
        
        /* [핵심 1] 3-wire 모드 (필수) */
        duplex = <2048>;

        /* [핵심 2] 핀 이름 (6번) */
        motion-gpios = <&gpio0 6 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        
        /* [핵심 3] 에러 로그가 요구하는 축 설정 추가! */
        zephyr,axis-x = <INPUT_REL_X>;
        zephyr,axis-y = <INPUT_REL_Y>;

        /* 스크롤 레이어 (잠시 주석 처리) */
        /* scroll-layers = <1>; */
    };
};

/* [핵심 4] Badjeff 드라이버 필수: Input Listener */
/ {
    trackball_listener {
        compatible = "zmk,input-listener";
        device = <&trackball>;
        
        /* 마우스 움직임 활성화 */
        xy-swap; /* 필요시 주석 해제 */
        y-invert; /* 필요시 주석 해제 */
        x-invert; /* 필요시 주석 해제 */
    };
};
